{
  "manifest_version": 2,
  "name": "Stock Monitor",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "tabs",
    "storage"
  ],
  "version": "1.0.6",
  "description": "Displays the options/stocks you have open in any browser tab on any page you would like.",
  "browser_action": {
    "default_title": "Stock Monitor\nClick to toggle panel for this website."
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["jquery-3.5.1.min.js","content.js"],
      "css": ["bootstrap.min.css"],
      "run_at": "document_start"
    }
  ],
  "background": {
    "scripts": ["jquery-3.5.1.min.js","background.js"],
    "persistent": true
  }
}